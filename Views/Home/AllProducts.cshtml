<div>
    <span><a href="/">Categories</a></s></span>
    <span>Products</s></span>
    
    <div>
        @model Product
        <h2>New Product</h2>
        <form asp-action="AddProduct" asp-controller="Home" method="post">
            
            <span asp-validation-for="Name"></span>
            <label asp-for="Name">Name:</label>
            <input type="text" asp-for="Name"></input>
            
            <span asp-validation-for="Description"></span>
            <label asp-for="Description">Description:</label>
            <input type="text" asp-for="Description"></input>
            
            <span asp-validation-for="price"></span>
            <label asp-for="price">Price:</label>
            <input type="number" asp-for="price"></input>

            <button type="submit">Create</button>
        </form>
    </div>
    
    <div>
        <h2>Existing Products</h2>
           @{
            foreach (var producto in ViewBag.allProducts)
            {
               <a href="product/@producto.ProductId">@producto.Name</a>
               <br/>
            }
        }
    </div>

</div>